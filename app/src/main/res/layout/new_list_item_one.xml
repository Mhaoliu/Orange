<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/news_list_item_padding"
    >

    <ImageView
        android:id="@+id/thumbnail_pic_s"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_error"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_toRightOf="@id/thumbnail_pic_s"
        android:textColor="#000000"
        android:textSize="@dimen/news_title_size"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail_pic_s"
        android:text="nema"
        android:textSize="@dimen/news_data_size"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/thumbnail_pic_s"
        android:text="2016-10-22 17:18"
        android:textSize="@dimen/news_data_size"
        android:layout_marginTop="2dp"
        />
</RelativeLayout>