<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 前贴广告 -->

    <RelativeLayout
        android:id="@+id/ad_page_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- 上部 -->

        <RelativeLayout
            android:id="@+id/play_controller_header"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp" >

            <!-- 返回 -->

            <ImageView
                android:id="@+id/header_back"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ad_bg_back"
                android:scaleType="centerInside"
                android:src="@drawable/vertical_icon_back" />
            <!-- 倒计时 -->

            <LinearLayout
                android:id="@+id/my_ad_count_wrap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ad_bg_back"
                android:gravity="center"
                android:orientation="horizontal" >

                <!-- 倒计时 -->

                <TextView
                    android:id="@+id/my_ad_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="90 秒"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                <!-- 站外免广告 -->

                <TextView
                    android:id="@+id/my_ad_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="站外免广告"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 音量 -->

            <ImageView
                android:id="@+id/my_ad_volume"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/my_ad_count_wrap"
                android:background="@drawable/ad_bg_back"
                android:scaleType="centerInside"
                android:src="@drawable/ad_icon_volume" />
        </RelativeLayout>

        <!-- 底部控制栏 -->

        <RelativeLayout
            android:id="@+id/my_ad_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="6dp"
            android:layout_alignParentBottom="true">

            <!-- 了解详情 -->

            <LinearLayout
                android:id="@+id/ad_more"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ad_bg_full"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ad_icon_arrow"
                    android:text="@string/playersdk_ad_descrip_youku"
                    android:textColor="#2fb3ff"
                    android:textSize="14sp" />
            </LinearLayout>
            <!-- 全屏/半屏 -->

            <ImageView
                android:id="@+id/gofullscreen"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ad_bg_full"
                android:scaleType="centerInside"
                android:src="@drawable/ad_icon_fullscreen" />
        </RelativeLayout>

    </RelativeLayout>

    <!-- 暂停广告 展示 -->

    <RelativeLayout
        android:id="@+id/img_ad_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/adv_img_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/adv_img_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/adv_img_imgview"
            android:layout_alignLeft="@id/adv_img_imgview"
            android:background="#99000000"
            android:padding="2dp"
            android:text="广告"
            android:textColor="#ccffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/adv_img_close_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/adv_img_imgview"
            android:layout_alignTop="@id/adv_img_imgview"
            android:src="@drawable/ad_close" />
    </RelativeLayout>

</RelativeLayout>