<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pop_top"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="@drawable/play_title_bkg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:scaleType="centerInside"
        android:src="@drawable/vertical_icon_back" />

    <TextView
        android:id="@+id/tv_detail_play_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="美国队长 3"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <TextView
            android:id="@+id/cur_vidq"
            android:layout_width="@dimen/vq_width"
            android:layout_height="@dimen/vq_height"
            android:layout_centerVertical="true"
            android:background="@drawable/quality_bkg"
            android:gravity="center"
            android:text="超清"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/title_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toRightOf="@id/cur_vidq"
            android:scaleType="centerInside"
            android:src="@drawable/vertical_logo" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>